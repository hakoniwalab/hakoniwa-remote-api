{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://hakoniwa.dev/schema/remote-api-config.json",
  "title": "Hakoniwa Remote API Config",
  "type": "object",
  "additionalProperties": false,

  "required": [
    "version",
    "rpc_service_config_path",
    "servers",
    "time_source_type",
    "poll_sleep_time_usec",
    "participants"
  ],

  "properties": {
    "version": {
      "type": "integer",
      "minimum": 1
    },
  
    "rpc_service_config_path": {
      "type": "string",
      "minLength": 1
    },
    "servers": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["nodeId"],
        "properties": {
          "nodeId": {
            "type": "string",
            "minLength": 1
          }
        }
      }
    },
    "time_source_type": {
      "type": "string",
      "enum": ["real", "virtual", "hakoniwa"]
    },
    "poll_sleep_time_usec": {
      "type": "integer",
      "minimum": 1
    },
    "participants": {
      "type": "array",
      "minItems": 1,
      "items": { "$ref": "#/$defs/participant" }
    }
  },

  "$defs": {
    "participant": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "name",
        "nodeId",
        "role",
        "poll_sleep_time_usec"
      ],
      "properties": {
        "name": {
          "type": "string",
          "minLength": 1
        },
        "nodeId": {
          "type": "string",
          "minLength": 1
        },
        "role": {
          "type": "string",
          "enum": ["conductor", "asset"]
        },
        "poll_sleep_time_usec": {
          "type": "integer",
          "minimum": 1
        }
      }
    }
  }
}
